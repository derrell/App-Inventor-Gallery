{
  "name"    : "aiagallery",

  "config-warnings" :
  {
    "job-shadowing" :
    [
      "build",
      "provider-deps",
      "migration",
      "source",
      "source-hybrid",
      "source-each",
      "libraries",
      "source-all",
      "build",
      "provider",
      "test",
      "test-basic",
      "test-basic-source",
      "test-source",
      "api",
      "source-all-script",
      "clean",
      "lint",
      "source-script",
      "translation",
      "build-resources",
      "build-script",
      "build-files",
      "info",
      "distclean",
      "test-basic"
    ]
  },
  
  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "api-data",
    "build",
    "clean",
    "distclean",
    "fix",
    "info",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "source-all",
    "source-each",
    "source-hybrid",
    "simulation-build",
    "simulation-run",
    "test",
    "test-basic",
    "test-basic-source",
    "test-source",
    "api",
    "translation",
    "test-basic"
  ],
  
  "default-job" : "source",

  "let" :
  {
    "APPLICATION"  : "aiagallery",
    "QXTHEME"      : "aiagallery.theme.Theme",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "OPTIMIZE"     : [ ],
    "ROOT"         : "."
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

  "jobs" :
  {
    "libraries" : 
    {
      "library" :
      [
        {
          "manifest" : "${CONTRIB_PATH}/Dialog/trunk/Manifest.json"
        },
        {
          "manifest" : "${CONTRIB_PATH}/RpcJs/trunk/Manifest.json"
        },
        {
          "manifest" : "${CONTRIB_PATH}/UploadWidget/trunk/Manifest.json"
        },
        {
          "manifest" : "${CONTRIB_PATH}/CollapsablePanel/trunk/Manifest.json"
        }
      ]
    },

    "test-basic" :
    {
      "desc" : "create a basic (server-side/headless) test runner app for unit tests of the current library",
      
      "extend" : ["testrunner::build-basic"],
      
      "exclude" :
      [
        "qx.bom.*"
      ],

      "let" :
      {
        "TESTRUNNER_ROOT" : "${QOOXDOO_PATH}/component/testrunner",
        "TEST_INCLUDE"    : "${APPLICATION}.test.*",
        "BUILD_PATH"      : "${ROOT}/test"
      }
    },
    
    "source" :
    {
      "compile-options" :
      {
        "uris" :
        {
          "add-nocache-param" : false
        }
      }
    },

    "source-hybrid" :
    {
      "compile-options" :
      {
        "code" :
        {
          "=except" : [ ]
        }
      }
    },

    "build" :
    {
      "=run" : [
        "build-script",
        "build-resources",
        "build-files",
        "build-backend"
      ]
    },

    "build-backend" :
    {
      "shell" :
      {
        "command"   :
        [
          "rm -rf ../../war/resource",
          "rm -rf ../../war/script",
          "rsync -av ./build/ ../../backend-js/jsserver/war/"
        ]
      }
    }

/*
    "build-script" :
    {
      "variants" : 
      {
        "=qx.debug" : [ "on" ]
      }
    }
*/
  }
}
